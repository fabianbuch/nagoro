<Wrapper title="TodoList">
  <a href="/new">New Task</a>
  <?r if @tasks.empty? ?>
    No Tasks
  <?r else ?>
    <table>
      <?r @tasks.each do |task| ?>
        <tr>
          <td class="title">#{task.title}</td>
          <td class="status">#{task.status}</td>
          <td class="toggle">#{task.toggle}</td>
          <td class="delete">#{task.delete}</td>
        </tr>
      <?r end ?>
    </table>
  <?r end ?>
</Wrapper>
